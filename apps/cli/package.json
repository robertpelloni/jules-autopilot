{
  "name": "@jules/cli",
  "version": "0.8.0",
  "description": "Jules Autopilot TUI - Terminal cockpit for Jules AI agent management",
  "type": "module",
  "bin": {
    "jules": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun --watch src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target node",
    "start": "bun src/cli.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ink": "^5.2.0",
    "@inkjs/ui": "^2.0.0",
    "react": "^18.3.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20"
  }
}
