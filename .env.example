# =============================================================================
# Jules Autopilot — Environment Configuration
# Copy this file to .env and fill in your values.
# =============================================================================

# ── Database ──────────────────────────────────────────────────────────────────
# SQLite (default for development/self-hosting)
DATABASE_URL=file:./prisma/dev.db

# ── NextAuth (REQUIRED for production) ───────────────────────────────────────
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change-me-generate-a-real-secret
# Your public URL (no trailing slash)
NEXTAUTH_URL=http://localhost:3000

# ── GitHub OAuth (optional — enables GitHub login) ─────────────────────────
# Create at: https://github.com/settings/applications/new
GITHUB_ID=
GITHUB_SECRET=

# ── Jules API ─────────────────────────────────────────────────────────────────
JULES_API_KEY=

# ── LLM Provider Keys (optional — enables intelligent routing) ───────────────
# These can also be set from the Settings > Integrations tab in the UI.
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=

# ── Docker Configuration ─────────────────────────────────────────────────────
# Port for the Next.js frontend
PORT=3000
# Path to mount into terminal server as /workspace
REPO_PATH=../workspace
# Base image for terminal server (default: python:3.11-slim-bookworm)
TERMINAL_BASE_IMAGE=python:3.11-slim-bookworm
